<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoryActivityRestaurants"
            android:label="@string/fragment_categories_1"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CategoryActivityPubs"
            android:label="@string/fragment_categories_2"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CategoryActivityEntertainment"
            android:label="@string/fragment_categories_3"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CategoryActivityOutdoors"
            android:label="@string/fragment_categories_4"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CategoryActivityArt"
            android:label="@string/fragment_categories_5"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".CategoryActivitySports"
            android:label="@string/fragment_categories_6"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".DescriptionActivity"
            android:parentActivityName=".MainActivity"></activity>
    </application>

</manifest>